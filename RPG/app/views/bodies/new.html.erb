<h1>Who do you want to be on <%= @world.name %>?</h1>
<%= flash[:errors][0] if flash[:errors] %>
<%= form_for [@world, @body] do |f| %>
  <%= f.hidden_field :spirit_id, value: @user.id %>
  <%= f.hidden_field :world_id, value: @world.id %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit %>
<% end %>
