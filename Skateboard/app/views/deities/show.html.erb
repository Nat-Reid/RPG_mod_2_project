<%if flash[:failure]%>
<h3 style="color:red">"<%=flash[:failure]%>!"</h3>
<%elsif flash[:notice]%>
<h3 style="color:green">"<%=flash[:notice]%>!"</h3>
<%end%>

<%if !@deity.defeated%>
<h1>You See <%= @deity.description %></h1>

<p>"I am <%= @deity.name %>. I am here to tell you a riddle:"</p>

<%= form_tag deity_riddle_path(@deity) do%>
  <label><%= @deity.riddle %></label>
  <%= text_field_tag :'answer' %>
  <%= submit_tag "take a gander" %>
<% end %>
<%else%>
<h1>The great <%=@deity.name%> has relinquished their world core to you. You see the defeated husk of <%=@deity.name%>.</h1>
<%end%>
<br>
<p>Go back to <%= link_to(@deity.world.setting, world_path(@deity.world_id)) %>
</p>
